# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Display a client
GET    /infos                controllers.HomeController.infos
GET    /info/:id                controllers.HomeController.info(id: Int)
POST    /addSecretInfo                controllers.HomeController.addSecretInfo

GET    /items                controllers.HomeController.items
GET    /item/:id                controllers.HomeController.item(id: Int)

# Get items that could append a certain secret info
GET    /remainItems/:secretId                controllers.HomeController.remainItems(secretId: Int)

GET    /classifies               controllers.HomeController.classifies
GET    /classify/:id                controllers.HomeController.classify(id: Int)

GET    /details                controllers.HomeController.details
GET    /detail/:id                controllers.HomeController.detail(id: Int)

POST    /addItem                controllers.HomeController.addItem

POST    /appendItem                controllers.HomeController.appendItem
POST    /encrypt                controllers.HomeController.encrypt
POST    /decrypt                controllers.HomeController.decrypt